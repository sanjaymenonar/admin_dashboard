<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>B2B Sales Billing Window</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            /* Allows elements to wrap */
            align-items: center;
            margin-bottom: 10px;
        }

        .row>div {
            display: flex;
            flex-direction: column;
            margin-right: 20px;
            /* Adjust if you need more space between columns */
            margin-bottom: 10px;
            /* Added bottom margin for wrapping */
        }

        .row div:last-child {
            margin-right: 0;
        }

        .row label {
            margin-bottom: 10px;
            /* Adjusted to add more space between label and input */
        }

        input[type="text"],
        input[type="number"],
        input[type="date"],
        select {
            width: 160px;
            /* Adjust as needed */
            padding: 8px;
            /* Makes text boxes bigger */
            margin-bottom: 10px;
            /* Space below each input */
            margin-right: 10px;
            /* Space to the right of each input */
        }

        input[type="text"]:last-child,
        input[type="number"]:last-child,
        input[type="date"]:last-child,
        select:last-child {
            margin-right: 0;
            /* Ensures the last element doesn't have extra right margin */
        }

        .add-row-btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .radio-group {
            display: flex;
            align-items: center;
        }

        .radio-group input {
            margin-right: 5px;
        }

        .actions button {
            padding: 10px;
            cursor: pointer;
            margin-right: 10px;
        }

        .save-btn {
            background-color: #4CAF50;
            color: white;
        }

        .other-btn {
            background-color: orange;
            color: white;
        }
    </style>

</head>

<body>

    <div class="top-bar">
        <h2>Sales Billing Window</h2>
        <button class="other-btn" onclick="window.close()">X</button>
    </div>

    <form id="myForm" action="saveBill" method="post">
        <div class="row">
            <label for="billNo">Bill No: </label>
            <input type="text" id="billNo" name="billNo">
            <label for="billDate">Bill Date: </label>
            <input type="date" id="billDate" name="billDate">
            <label for="ewayBillNumber">Eway Bill Number: </label>
            <input type="text" id="ewayBillNumber" name="ewayBillNumber">
            <label for="deliveryDate">Delivery Date:</label>
            <input type="date" id="deliveryDate" name="deliveryDate">
        </div>

        <div class="row">
            <label for="customerName">Customer Name:</label>
            <input type="text" id="customerName" name="customerName">
            <label for="phoneNumber">Phone Number:</label>
            <input type="text" id="phoneNumber" name="phoneNumber">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address">
            <label for="deliveryAddress">Delivery Address:</label>
            <input type="text" id="deliveryAddress" name="deliveryAddress">
        </div>

        <div class="row">
            <label for="transactionMode">Transaction Mode:</label>
            <select id="transactionMode" name="transactionMode">
                <option value="cash">Cash</option>
                <option value="credit">Credit</option>
            </select>
            <input type="checkbox" id="isIGST" name="isIGST"><label for="isIGST" style="margin-right: 0;">IS
                IGST</label>
        </div>

        <!-- Product Entry Row (No label adjustments as per your instruction) -->

        <div class="form-group">
            <div class="row" id="product-entry-row">
                <div><label for="code">Code</label><input type="text" id="code" name="code"></div>
                <div><label for="itemName">Item Name</label><input type="text" id="itemName" name="itemName"></div>
                <div><label for="batchCode">Batch Code</label><input type="text" id="batchCode" name="batchCode"></div>
                <div><label for="qty">Qty</label><input type="number" id="qty" name="qty"></div>
                <div><label for="unitPrice">Unit Price</label><input type="text" id="unitPrice" name="un4"></div>
                <div><label for="mrp">MRP</label><input type="text" id="mrp" name="mrp"></div>
                <div><label for="taxValue">Tax Value</label><input type="text" id="taxValue" name="taxValue"></div>
                <div><label for="gst">GST</label><input type="text" id="gst" name="gst"></div>
                <div><label for="gstAmt">GST Amt</label><input type="text" id="gstAmt" name="gstAmt"></div>
                <div><label for="total">Total</label><input type="text" id="total" name="total"></div>
                <div>
                    <label for="staff">Staff</label>
                    <select id="staff" name="staff">
                        <option value="">Select</option>
                        <option value="1">Staff 1</option>
                        <option value="2">Staff 2</option>
                    </select>
                </div>
            </div>
            <button type="button" class="add-row-btn" id="addRowButton">Add Row</button>
        </div>
        <input type="hidden" id="itemsPurchased" name="itemsPurchased">
        <div class="row">
            <label for="outstanding">Outstanding:</label>
            <input type="text" id="outstanding" name="outstanding">
            <label for="discount">Discount:</label>
            <input type="text" id="discount" name="discount">
            <label for="gstAmount">GST Amount:</label>
            <input type="text" id="gstAmount" name="gstAmount">
        </div>

        <div class="form-group">
            <label>Payment Method:</label>
            <div class="radio-group">
                <input type="radio" name="paymentMethod" value="bankTransfer" id="bankTransfer"
                    name="bankTransfer"><label for="bankTransfer">Bank Transfer</label>
                <input type="radio" name="paymentMethod" value="cheque" id="cheque" name="cheque"><label
                    for="cheque">Cheque</label>
                <input type="radio" name="paymentMethod" value="both" id="both" name="both"><label
                    for="both">Both</label>
                <input type="radio" name="paymentMethod" value="bank" id="bank" name="bank"><label
                    for="bank">Bank</label>
                <input type="radio" name="paymentMethod" value="cash" id="cash" name="cash"><label
                    for="cash">Cash</label>
            </div>
        </div>

        <div class="row">
            <label for="amount">Amount:</label>
            <input type="text" id="amount" name="amount">
            <label for="roundoff">Roundoff:</label>
            <input type="text" id="roundoff" name="roundoff">
            <label for="grandTotal">Grand Total:</label>
            <input type="text" id="grandTotal" name="grandTotal">
        </div>

        <div class="actions">
            <button type="button" class="other-btn" id="hold">Hold Bill</button>
            <button type="button" class="other-btn" id="return">Return</button>
            <button type="button" class="save-btn" id="savePrint">Save & Print</button>
            <button type="button" class="save-btn" id="save">Save</button>
            <button type="button" class="other-btn" id="view">View</button>
            <button type="button" class="other-btn" id="clear">Clear</button>
        </div>
    </form>


    <script>
        let itemsArray = []
        document.addEventListener("DOMContentLoaded", function () {
            var itemNameInput = document.getElementById('itemName');

            itemNameInput.addEventListener('keyup', function () {
                var itemName = this.value;
                // Make sure the input is not empty
                if (itemName.length > 2) { // Example threshold to reduce requests
                    fetchItemDetails(itemName);
                }
            });
        });



        function fetchItemDetails(itemName) {
            fetch(`/user/get-item-details?itemName=${encodeURIComponent(itemName)}`)
                .then(response => response.json())
                .then(data => {

                    if (data && data.success) {

                        document.getElementById('unitPrice').value = data.item.unitPrice;
                        document.getElementById('code').value = data.item.code;
                        document.getElementById('batchCode').value = data.item.batchCode;
                        document.getElementById('mrp').value = data.item.MRP;
                        document.getElementById('taxValue').value = data.item.tax;
                        document.getElementById('gst').value = data.item.gstPercentage;
                        document.getElementById('gstAmt').value = data.item.gstAmount;
                        document.getElementById('total').value = data.item.total;
                    }
                })
                .catch(error => console.error('Error fetching item details:', error));
        }


        document.getElementById('addRowButton').addEventListener('click', function () {
            // Collect item data from inputs
            const itemData = {
                code: document.getElementById('code').value,
                itemName: document.getElementById('itemName').value,
                batchCode: document.getElementById('batchCode').value,
                qty: document.getElementById('qty').value,
                unitPrice: document.getElementById('unitPrice').value,
                mrp: document.getElementById('mrp').value,
                taxValue: document.getElementById('taxValue').value,
                gst: document.getElementById('gst').value,
                gstAmt: document.getElementById('gstAmt').value,
                total: document.getElementById('total').value,
                // staff: document.getElementById('staff').value,
            };

            // Add the itemData to the itemsArray
            itemsArray.push(itemData);
            console.log(itemsArray);

            // Optional: Clear the input fields here if desired
        });
        const saveButton = document.getElementById('save');
        const form = document.getElementById('myForm');
        saveButton.addEventListener('click', function () {
            console.log("inside");


            document.getElementById('itemsPurchased').value = JSON.stringify(itemsArray);


            form.submit();
        });
        document.getElementById('clear').addEventListener('click', function () {
            var allInputs = document.querySelectorAll('input');
            allInputs.forEach(singleInput => singleInput.value = '');
        })
    </script>

</body>

</html>